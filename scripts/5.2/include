pkgname=varnish
depends="gcc libc-dev libgcc pcre libexecinfo libedit"
depends_dev=
makedepends="$depends_dev pcre-dev ncurses-dev libedit-dev py-docutils py-sphinx linux-headers libexecinfo-dev rsync attr"

url="https://varnish-cache.org/_downloads/$pkgname-$pkgver.tgz"
builddir="$tmp/$pkgname-$pkgver"

build() {
	cd "$builddir"
	./configure \
		--build=x86_64-alpine-linux-musl \
		--host=x86_64-alpine-linux-musl \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var/lib \
		--without-jemalloc
	make
}

